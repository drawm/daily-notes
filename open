#!/bin/bash

required_date="${1:-today}"

formated_date="$( date -d "${required_date}" +'%Y-%m-%d' )"
folderPath="./notes"
filePath="${folderPath}/${formated_date}.md"

if [ ! -d "${folderPath}"	]
then
	mkdir -p "${folderPath}"
fi


if [ ! -e $filePath	]
then
    echo "No file to open @ ${filePath}"
else

    echo "Editing file ${filePath}"
    $EDITOR "${filePath}"
fi


